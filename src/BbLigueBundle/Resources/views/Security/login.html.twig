{% extends 'BbLigueBundle:Layout:login.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row">
    <div class="cell">
        <form id="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="logo-wrapper wrapper clearfix">
                <span class="ligue-icon">
                    {{ include('BbLigueBundle:Layout:Icons/logo-ligue.html.twig') }}
                </span>
            </div>
            <div class="title-wrapper wrapper clearfix">
                {{ 'layout.manager_title'|trans({}, 'messages')|raw }}
            </div>
            <div class="input-wrapper wrapper clearfix">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="input-wrapper wrapper clearfix">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" />
            </div>
            <div class="checkbox-wrapper wrapper clearfix">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="submit-wrapper wrapper clearfix">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>
{% endblock fos_user_content %}
