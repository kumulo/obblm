{% extends 'BbLigueBundle:Layout:layout.html.twig' %}
{% trans_default_domain "form" %}
{% block body %}
    <section id="espace-coach" class="content normal-content has-form add-team">
        <h1><span>Ajout de ligue</span> Hoooooo yeah</h1>

        {{ form_start(form) }}
            {{form_errors(form)}}
            <table>
                <tr>
                    <td>{{form_label(form.name, 'entity.ligue.label.name')}}</td>
                    <td>{{form_widget(form.name)}}</td>
                </tr>
                <tr>
                    <td>{{form_label(form.rule, 'entity.ligue.label.rule')}}</td>
                    <td>{{form_widget(form.rule)}}</td>
                </tr>
            </table>
            <div>
                {{form_widget(form.save, {'label': 'entity.ligue.add.submit'})}}
            </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
