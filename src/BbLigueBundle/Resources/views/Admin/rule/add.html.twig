{% extends 'BbLigueBundle:Layout:layout.html.twig' %}
{% trans_default_domain "form" %}
{% block body %}
    <section id="espace-coach" class="content normal-content has-form add-team">
        <h1><span>Ajout de r√®gle</span> Hoooooo yeah</h1>

        {{ form_start(form) }}
            {{form_errors(form)}}
            <table>
                <tr>
                    <td>{{form_label(form.name, 'entity.rule.label.name')}}</td>
                    <td>{{form_widget(form.name)}} {{form_errors(form.name)}}</td>
                </tr>
                <tr>
                    <td>{{form_label(form.rule_key, 'entity.rule.label.rule_key')}}</td>
                    <td>{{form_widget(form.rule_key)}} {{form_errors(form.rule_key)}}</td>
                </tr>
                {% if form.base_rule is defined %}
                <tr>
                    <td>{{form_label(form.base_rule, 'entity.rule.label.base_rule')}}</td>
                    <td>{{form_widget(form.base_rule)}} {{form_errors(form.base_rule)}}</td>
                </tr>
                {% endif %}
                <tr>
                    <td>{{form_label(form.description, 'entity.rule.label.description')}}</td>
                    <td>{{form_widget(form.description)}} {{form_errors(form.description)}}</td>
                </tr>
            </table>
            <div>
                {{form_widget(form.save, {'label': 'entity.rule.add.submit'})}}
            </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
