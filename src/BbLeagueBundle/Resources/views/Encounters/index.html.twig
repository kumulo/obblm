{% extends 'BbLeagueBundle:Layout:layout.html.twig' %}

{% block body %}
    <ul>
    {% for i, team in coach.teams %}
        <li class="{{ cycle(['odd', 'even'], i) }}">
            <h2>{{ team.name }}</h2>
            <ul>
            {% for j, match in team.matchs %}
                <li class="{{ cycle(['odd', 'even'], j) }}">
                    {{ match.journey.name }}
                    <div>{{ match.team.name }} VS {{ match.visitor.name }}</div>
                    {% if team.league.currentJourney >= match.journey %}
                    <div>
                        {% if match.valid %}
                        Journ√©e close
                        {% else %}
                        <a class="button button-basic" href="{{ path('encounter_sheet', {encounter_id: match.id}) }}">{{ 'layout.leagues.index.show_results'|trans }}</a>
                        {% endif %}
                    </div>
                    {% endif %}
                </li>
            {% endfor %}
            </ul>
        </li>
    {% endfor %}
    </ul>
{% endblock body %}
